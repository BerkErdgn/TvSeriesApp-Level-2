<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EpisodesFragment"
    android:orientation="vertical">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/episodesImageView"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="240dp"
        tools:src="@tools:sample/avatars"
        app:shapeAppearanceOverlay="@style/DiamondCut"/>

    <LinearLayout
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp">


            <TextView
                android:id="@+id/nameTextView"
                android:background="@android:drawable/divider_horizontal_dim_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Episodes Name"
                android:textSize="20dp"
                android:textColor="@color/custom_white"
                android:gravity="center"
                android:layout_marginTop="2dp"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/unchangeableText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/custom_white"
                        android:text="Season No : " />

                    <TextView
                        android:id="@+id/numareTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="561" />

                    <TextView
                        android:id="@+id/unchangeableText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=". Season" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/unchangeableText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating : "
                        android:textColor="@color/custom_white" />

                    <TextView
                        android:id="@+id/imdbTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/custom_yellow_for_Imdb"
                        android:text="TextView"
                        android:drawableStart="@drawable/imdb_svgrepo_com"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/unchangeableText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date: "
                        android:textColor="@color/custom_white"/>

                    <TextView
                        android:id="@+id/dateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2012/09/17 " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/unchangeableText5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time : "
                        android:textColor="@color/custom_white"/>

                    <TextView
                        android:id="@+id/timeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/unchangeableText6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Runtime : "
                        android:textColor="@color/custom_white"/>

                    <TextView
                        android:id="@+id/runtimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/unchangeableText7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textColor="@color/custom_white"/>

                <TextView
                    android:id="@+id/summaryTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="write"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>